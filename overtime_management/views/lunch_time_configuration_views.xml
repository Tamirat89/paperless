<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Lunch Time Configuration Form View -->
    <record id="view_lunch_time_configuration_form" model="ir.ui.view">
        <field name="name">lunch.time.configuration.form</field>
        <field name="model">lunch.time.configuration</field>
        <field name="arch" type="xml">
            <form string="Lunch Time Configuration">
                <header>
                    <!-- Approve Button -->
                    <button name="action_approve" 
                            string="Approve" 
                            type="object" 
                            class="btn-success"
                            groups="overtime_management.group_overtime_request_hr_manager"
                            invisible="state != 'draft'"/>
                    
                    <!-- Reject Button -->
                    <button name="action_reject" 
                            string="Reject" 
                            type="object" 
                            class="btn-danger"
                            groups="overtime_management.group_overtime_request_hr_manager"
                            invisible="state != 'draft'"/>
                    
                    <!-- Reset to Draft Button -->
                    <button name="action_reset_to_draft" 
                            string="Reset to Draft" 
                            type="object" 
                            class="btn-warning"
                            groups="overtime_management.group_overtime_request_hr_manager"
                            invisible="state == 'draft'"/>
                    
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,approved,rejected"/>
                </header>
                
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g., Standard Lunch Time" readonly="state != 'draft'"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                            <field name="is_active_config" widget="boolean_toggle"/>
                            <field name="lunch_start_time" widget="float_time" readonly="state != 'draft'"/>
                            <field name="lunch_end_time" widget="float_time" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="total_lunch_hours" widget="float_time"/>
                        </group>
                    </group>
                    
                    <!-- <notebook>
                        <page string="Information">
                            <group>
                                <group string="Time Details">
                                    <label string="Lunch Start Time: Enter in 24-hour format (e.g., 12.0 for 12:00, 12.5 for 12:30)"/>
                                    <label string="Lunch End Time: Enter in 24-hour format (e.g., 13.0 for 13:00, 13.5 for 13:30)"/>
                                    <label string="Total Lunch Hours: Automatically calculated as End Time - Start Time"/>
                                </group>
                                <group string="Usage">
                                    <label string="This configuration will be used to calculate overtime hours."/>
                                    <label string="Lunch hours will be deducted from total worked hours if overtime period overlaps with lunch time."/>
                                    <label string="Only approved configurations are used in calculations."/>
                                    <label string="Only one approved configuration is allowed per company."/>
                                </group>
                            </group>
                        </page>
                    </notebook> -->
                </sheet>
                
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Lunch Time Configuration Tree View -->
    <record id="view_lunch_time_configuration_tree" model="ir.ui.view">
        <field name="name">lunch.time.configuration.tree</field>
        <field name="model">lunch.time.configuration</field>
        <field name="arch" type="xml">
            <list string="Lunch Time Configurations" decoration-success="state == 'approved'" decoration-danger="state == 'rejected'" decoration-muted="state == 'draft'">
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="is_active_config" widget="boolean_toggle"/>
                <field name="lunch_start_time" widget="float_time"/>
                <field name="lunch_end_time" widget="float_time"/>
                <field name="total_lunch_hours" widget="float_time"/>
                <field name="state" widget="badge" decoration-success="state == 'approved'" decoration-danger="state == 'rejected'" decoration-info="state == 'draft'"/>
            </list>
        </field>
    </record>

