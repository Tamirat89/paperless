    <!-- Action for Lunch Time Configuration -->
    <record id="action_lunch_time_configuration" model="ir.actions.act_window">
        <field name="name">Lunch Time Configuration</field>
        <field name="res_model">lunch.time.configuration</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_lunch_time_configuration_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Lunch Time Configuration
            </p>
            <p>
                Configure lunch break times that will be deducted from overtime calculations.
                Only approved configurations will be used in overtime hour calculations.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_lunch_time_configuration"
              name="Lunch Time Configuration"
              parent="overtime_management.menu_hr_overtime_root"
              action="action_lunch_time_configuration"
              groups="overtime_management.group_overtime_request_hr_manager"
              sequence="50"
              />
