<odoo>
    <record id="view_overtime_type_form" model="ir.ui.view">
        <field name="name">overtime.type.form</field>
        <field name="model">overtime.type</field>
        <field name="arch" type="xml">
            <form>
                <header>
                   
                    <button name="action_approve" type="object" class="oe_stat_button" icon="fa-check" string="Approve" groups="overtime_management.group_overtime_request_super_admin" invisible="state != 'draft'"/>
                    <button name="action_reject" type="object" class="oe_stat_button" icon="fa-times" string="Reject" groups="overtime_management.group_overtime_request_super_admin" invisible="state != 'draft'"/>
                    <button name="action_reset" type="object" class="oe_stat_button" icon="fa-times" string="Reset" groups="overtime_management.group_overtime_request_super_admin" invisible="state != 'approved'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,approved,rejected,reset"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active"/>
                        <field name="active" invisible="1"/>
                    </div>
                    <group>
                        <group>
                            <field name="name" readonly="state != 'draft'"/>
                            <field name="multiplier" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="company_id" readonly="1"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

     <record id="view_overtime_type_tree" model="ir.ui.view">
        <field name="name">overtime.type.tree</field>
        <field name="model">overtime.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="multiplier"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="active" invisible="1"/>
            </list>
        </field>
    </record>

