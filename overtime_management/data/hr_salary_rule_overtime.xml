<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    

    <!-- Overtime Salary Rule -->
    <record id="hr_salary_rule_overtime" model="hr.salary.rule">
    <field name="name">Overtime Payment</field>
    <field name="sequence">100</field>
    <field name="code">OVERTIME</field>
    <field name="category_id" ref="hr_payroll_community.ALW"/>
    <field name="condition_select">python</field>
    <field name="condition_python">
        <![CDATA[
result = contract.get_overtime_amount(payslip.date_from, payslip.date_to) != 0
        ]]>
    </field>
    <field name="amount_select">code</field>
    <field name="amount_python_compute">
        <![CDATA[
result = contract.get_overtime_amount(payslip.date_from, payslip.date_to)
        ]]>
    </field>
    <field name="appears_on_payslip" eval="True"/>
</record>


</odoo>


