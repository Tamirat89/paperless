<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Working Days Configuration Form View -->
    <record id="view_working_days_config_form" model="ir.ui.view">
        <field name="name">working.days.config.form</field>
        <field name="model">working.days.config</field>
        <field name="arch" type="xml">
            <form string="Working Days Configuration">
                <header>
                    <button name="action_approve" string="Approve" type="object" 
                            class="btn-primary" invisible="state != 'draft'" 
                            groups="hr.group_hr_manager"/>
                    <button name="action_reset_draft" string="Reset to Draft" type="object" 
                            class="btn-secondary" invisible="state != 'approved'" 
                            groups="hr.group_hr_manager"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="state == 'approved'"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="number_of_working_days" readonly="state == 'approved'"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Working Days Configuration List View -->
    <record id="view_working_days_config_list" model="ir.ui.view">
        <field name="name">working.days.config.list</field>
        <field name="model">working.days.config</field>
        <field name="arch" type="xml">
            <list string="Working Days Configuration" 
                  decoration-info="state == 'draft'" 
                  decoration-success="state == 'approved'">
                <field name="name"/>
                <field name="number_of_working_days"/>
                <field name="state" widget="badge" 
                       decoration-info="state == 'draft'" 
                       decoration-success="state == 'approved'"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Working Days Configuration Search View -->
    <record id="view_working_days_config_search" model="ir.ui.view">
        <field name="name">working.days.config.search</field>
        <field name="model">working.days.config</field>
        <field name="arch" type="xml">
            <search string="Working Days Configuration">
                <field name="name"/>
                <field name="number_of_working_days"/>
                <field name="company_id"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Company" name="group_company" context="{'group_by': 'company_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Working Days Configuration Action -->
    <record id="action_working_days_config" model="ir.actions.act_window">
        <field name="name">Working Days Configuration</field>
        <field name="res_model">working.days.config</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_working_days_config_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first working days configuration!
            </p>
            <p>
                Configure the number of working days for your company. This setting can be used 
                by other modules for calculations based on working days.
            </p>
        </field>
    </record>

    <!-- Menu under Employee Configuration -->
    <menuitem id="menu_working_days_config" 
              name="Working Days Configuration" 
              parent="hr.hr_menu_configuration" 
              action="action_working_days_config" 
              groups="hr.group_hr_manager"
              sequence="50"/>
</odoo>
