<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Groups -->
    <record id="group_perdiem_user" model="res.groups">
        <field name="name">Per Diem User</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
        <field name="comment">Can create and view own per diem requests</field>
    </record>

    <record id="group_perdiem_manager" model="res.groups">
        <field name="name">Per Diem Manager</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
        <field name="implied_ids" eval="[(4, ref('group_perdiem_user'))]"/>
        <field name="comment">Can review, approve and manage all per diem requests</field>
    </record>

    <!-- Record Rules -->
    <record id="perdiem_request_user_rule" model="ir.rule">
        <field name="name">Per Diem Request: User Access</field>
        <field name="model_id" ref="model_employee_perdiem"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id), ('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_perdiem_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <record id="perdiem_request_manager_rule" model="ir.rule">
        <field name="name">Per Diem Request: Manager Access</field>
        <field name="model_id" ref="model_employee_perdiem"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_perdiem_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <record id="perdiem_line_user_rule" model="ir.rule">
        <field name="name">Per Diem Line: User Access</field>
        <field name="model_id" ref="model_employee_perdiem_line"/>
        <field name="domain_force">[('perdiem_id.employee_id.user_id', '=', user.id), ('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_perdiem_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <record id="perdiem_line_manager_rule" model="ir.rule">
        <field name="name">Per Diem Line: Manager Access</field>
        <field name="model_id" ref="model_employee_perdiem_line"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_perdiem_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <record id="perdiem_config_manager_rule" model="ir.rule">
        <field name="name">Per Diem Config: Manager Access</field>
        <field name="model_id" ref="model_perdiem_config"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_perdiem_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
</odoo>
