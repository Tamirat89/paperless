<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payroll_excel_wizard_form" model="ir.ui.view">
        <field name="name">payroll.excel.wizard.form</field>
        <field name="model">payroll.excel.wizard</field>
        <field name="arch" type="xml">
            <form string="Payroll Excel Report">
                <group>
                    <field name="batch_id"/>
                </group>
                <footer>
                    <button name="action_generate_excel" string="Generate Excel Report" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_payroll_excel_wizard" model="ir.actions.act_window">
        <field name="name">Payroll Excel Report</field>
        <field name="res_model">payroll.excel.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_payroll_excel_root"
              name="Payroll Excel"
              parent="hr_payroll_community.menu_hr_payroll_community_root"
              sequence="60"/>

    <menuitem id="menu_payroll_excel_report"
              name="Generate Excel Report"
              parent="menu_payroll_excel_root"
              action="action_payroll_excel_wizard"
              sequence="10"/>
</odoo>

