<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payroll_batch_excel_wizard_form" model="ir.ui.view">
        <field name="name">payroll.batch.excel.wizard.form</field>
        <field name="model">payroll.batch.excel.wizard</field>
        <field name="arch" type="xml">
            <form string="Payroll Batch Excel Report (Dynamic)">
                <group>
                    <field name="batch_id"/>
                </group>
                <footer>
                    <button name="action_generate_excel" string="Generate Excel Report" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_payroll_batch_excel_wizard" model="ir.actions.act_window">
        <field name="name">Payroll Batch Excel Report (Dynamic)</field>
        <field name="res_model">payroll.batch.excel.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_payroll_batch_excel_report"
              name="Payroll Batch Report (Dynamic)"
              parent="menu_payroll_excel_root"
              action="action_payroll_batch_excel_wizard"
              sequence="20"/>
</odoo>

