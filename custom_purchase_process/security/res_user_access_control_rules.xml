<odoo>
  <data noupdate="1">
    <!-- Only see records from your own company -->
    <record id="res_user_access_control_company_rule" model="ir.rule">
      <field name="name">User Access Control: Company Restriction</field>
      <field name="model_id" ref="model_res_user_access_control"/>
      <field name="domain_force">[('company_id', 'in', company_ids)]</field>
      <field name="groups" eval="[(4, ref('group_purchase_request_ceos'))]"/>
      <field name="global" eval="False"/>
    </record>
  </data>
</odoo>
