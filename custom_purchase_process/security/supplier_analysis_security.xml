<odoo>
    <!-- Create Custom Category -->
    <record id="supplier_analysis_category" model="ir.module.category">
        <field name="name">Supplier Analysis</field>
        <field name="sequence" eval="11"/>
    </record>

 

    <!-- Readonly Group -->
    <record id="group_supplier_analysis_readonly" model="res.groups">
        <field name="name">Readonly</field>
        <field name="category_id" ref="supplier_analysis_category"/>
    </record>   

    <record id="group_supplier_analysis_user" model="res.groups">
        <field name="name">Procurement Officer</field>
        <field name="category_id" ref="supplier_analysis_category"/>
        <field name="implied_ids" eval="[(4, ref('group_supplier_analysis_readonly'))]"/>
    </record>

    <record id="group_supplier_analysis_supervisor" model="res.groups">
        <field name="name">Procurement Supervisor</field>
        <field name="category_id" ref="supplier_analysis_category"/>
        <field name="implied_ids" eval="[(4, ref('group_supplier_analysis_user'))]"/>
    </record>

    <!-- Approver Group -->
    <record id="group_supplier_analysis_approver" model="res.groups">
        <field name="name">Committee Approver</field>
        <field name="category_id" ref="supplier_analysis_category"/>
        <field name="implied_ids" eval="[(4, ref('group_supplier_analysis_supervisor'))]"/>
    </record>

    <record id="group_supplier_analysis_procurement_manager" model="res.groups">
        <field name="name">Procurement Manager</field>
        <field name="category_id" ref="supplier_analysis_category"/>
        <field name="implied_ids" eval="[(4, ref('group_supplier_analysis_approver'))]"/>
    </record>

    <!-- Independent Auditor Group - Only for auditor-specific actions -->
    <record id="group_supplier_analysis_auditor_independent" model="res.groups">
        <field name="name">Auditor (Independent)</field>
        <field name="category_id" ref="supplier_analysis_category"/>
        <!-- No implied_ids - completely independent group -->
    </record>

   

    <!-- CEO Group -->
    <record id="group_supplier_analysis_ceo" model="res.groups">
        <field name="name">CEO</field>
        <field name="category_id" ref="supplier_analysis_category"/>
        <field name="implied_ids" eval="[(4, ref('group_supplier_analysis_procurement_manager'))]"/>
    </record>

    <!-- Super Admin Group -->
    <record id="group_custom_supplier_analysis_super_admin" model="res.groups">
        <field name="name">Super Admin</field>
        <field name="category_id" ref="supplier_analysis_category"/>
        <field name="implied_ids" eval="[(4, ref('group_supplier_analysis_ceo'))]"/>
    </record>
</odoo>











