<odoo>
    <!-- Form View -->
    <record id="view_supplier_analysis_threshold_form" model="ir.ui.view">
        <field name="name">supplier_analysis.threshold.form</field>
        <field name="model">supplier_analysis.threshold</field>
        <field name="arch" type="xml">
            <form string="Threshold Amount">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="multiplier"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_supplier_analysis_threshold_tree" model="ir.ui.view">
        <field name="name">supplier_analysis.threshold.tree</field>
        <field name="model">supplier_analysis.threshold</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="multiplier"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_supplier_analysis_threshold" model="ir.actions.act_window">
        <field name="name">Threshold Supplier Analysis</field>
        <field name="res_model">supplier_analysis.threshold</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_supplier_analysis_threshold_root"
              name="Threshold Amount"
              parent="purchase.menu_purchase_config"
              sequence="4"/>

    <menuitem id="menu_supplier_analysis_threshold_sub_root"
              name="Supplier Analysis Threshold"
              parent="menu_supplier_analysis_threshold_root"
              action="action_supplier_analysis_threshold"
              sequence="1"/>
</odoo>
